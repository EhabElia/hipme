<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= image_tag @outfit.picture.url(:large) %>
    </div>
    <div class="col-xs-6">
      <h2><%= @outfit.title %></h2>
      <p><%= @outfit.description %></p>
      <p><%= @outfit.price %>â‚¬ per day</p>
      <p><%= @outfit.size %></p>
      <p><%= @outfit.style %></p>
      <%= link_to "EDIT", edit_outfit_path(@outfit), class: "btn btn-warning" %>
      <%= link_to "DELETE", outfit_path(@outfit), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      alert('<%= j @alert_message %>');
    });
  <% end %>
<% end %>
