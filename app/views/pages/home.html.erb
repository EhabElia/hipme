<div id="home" class="text-center walden">
  <div class="filter"></div>
  <div class="home-container">
    <h1> HIP ME!</h1>
        <%= image_tag "logo_big.png", class: "img-home" %>
    <!-- <h2>Louez du bon goût près de chez vous</h2> -->
    <h2>Hip me as hard as you can</h2>

    <form class="form-inline" action="outfits/styles" method="GET">
      <div class="input-group">
        <input id="address" name="address" type="text" class="form-control input-lg" aria-label="..." placeholder="Williamsburg, NY" value="<%= params[:address] ? params[:address] : "Paris, France" %>">
        <input type="hidden" name="distance" value="5">
      </div>
      <div class="input-group">
        <input id="checkin" name="checkin" type="date" class="form-control input-lg" aria-label="..." placeholder="10/11/2015">
      </div>
      <div class="input-group">
        <input id="checkout" name="checkout" type="date" class="form-control input-lg" aria-label="..." placeholder="12/11/2015">
      </div>
      <div class="input-group">
        <select id="style" name="style" class="form-control input-lg">
          <option value="all" selected>All styles</option>
          <% Outfit::ALL_STYLES.each do |style| %>
            <option<%= " selected" if params[:style] == style %>><%= style %></option>
          <% end %>
        </select>
      </div>
      <div class="input-group">
        <select id="size" name="size" class="form-control input-lg">
          <option value="all" selected>All sizes</option>
          <% Outfit::ALL_SIZES.each do |size| %>
            <option<%= " selected" if params[:size] == size %>><%= size %></option>
          <% end %>
        </select>
      </div>
      <div class="input-group">
        <input type="submit" name="submit" value="HIP ME!" class="btn btn-warning btn-lg"></input>
      </div>
    </form>
  </div>
</div>
